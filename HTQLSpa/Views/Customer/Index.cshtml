@using HTQLSpa.Controllers;

@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (LoginController.accountID != "" && (LoginController.account_type == "Admin" || LoginController.account_type == "Employee"))
{
    <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
	        <div class="navbar-nav ml-auto py-0">
		        <a href="" class="nav-item nav-link">Danh sách Khách hàng</a>
	        </div>
        </div>
    </nav>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr align="center" >
                <th align="center" width="10%">
                    Mã KH
                </th>
                <th align="center"  width="25%">
                    Họ & Tên
                </th>
                <th align="center"  width="25%">
                    Ngày sinh
                </th>
                <th align="center"  width="20%">
                    Địa chỉ
                </th>
                <th align="center"  width="20%">
                    SĐT
                </th>
                <th align="center"  width="20%">
                    Tài khoản
                </th>
                <th align="center"  width="20%">
                    Mật khẩu
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr align="center">
                    <td>
                        @obj.CustomerID
                    </td>
                    <td>
                        @obj.CustomerName
                    </td>
                    <td>
                        @obj.DoB
                    </td>
                    <td>
                        @obj.CustomerAddress
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        @obj.AccountID
                    </td>
                    <td>
                        @obj.Password
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Bạn cần đăng nhập tài khoản để xem trang này</p>
}


