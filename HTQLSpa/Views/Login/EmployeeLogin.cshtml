@model Employee
@{
    ViewData["Title"] = "Login or Register";
}

<div class="shop_top">
    <div class="container">
        <div class="col-md-6">
            <div class="login-title">
                <h4 class="title">Đăng nhập Tài khoản Nhân viên</h4>
                <div id="loginbox" class="loginbox">
                <form asp-action="EmployeeVerification" method="post" name="login" id="login-form">
                    <fieldset class="input">
                    <p id="login-form-username">
                        <label asp-for="AccountID"></label>
                        <input asp-for="AccountID" type="text" class="inputbox" size="18" autocomplete="off">
                    </p>
                    <p id="login-form-password">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="text" class="inputbox" size="18" autocomplete="off">
                    </p>
                    <div class="remember">
                        <input type="submit" name="Submit" class="button" value="Đăng nhập"><div class="clear"></div>
                    </div>
                    </fieldset>
                </form>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>

@section Scripts{

}
