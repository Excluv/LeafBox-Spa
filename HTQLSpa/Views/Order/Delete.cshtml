@model Order
@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="Delete">
    <input asp-for="OrderID" hidden  />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary-basket" style="padding: 10px">Xoá Đơn hàng</h4>
        </div>
        <div class="mb-3">
            <label asp-for="OrderDate"></label>
            <input asp-for="OrderDate" disabled class="form-control"   />
        </div>
        <div class="mb-3">
            <label asp-for="OrderTotal"></label>
            <input asp-for="OrderTotal" disabled class="form-control"   />
        </div>
        <div class="mb-3">
            <label asp-for="Paid"></label>
            <input asp-for="Paid" disabled class="form-control"   />
        </div>
        <div class="mb-3">
            <label asp-for="Completed"></label>
            <input asp-for="Completed" disabled class="form-control"   />
        </div>
        <div class="mb-3">
            <label asp-for="CustomerID"></label>
            <input asp-for="CustomerID" disabled class="form-control"   />
        </div>
        <div class="mb-3">
            <label asp-for="EmployeeID"></label>
            <input asp-for="EmployeeID" disabled class="form-control"   />
        </div>
        <a asp-controller="" asp-action="">
            <input type="submit" name="Submit" style="width:150px; padding:10px;" value="Xoá">
        </a>
        <button asp-controller="Order" asp-action="Index" style="width:150px; padding:10px;">
            Quay lại
        </button>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"   />
    }
}

