@using HTQLSpa.Controllers;

@model Order_Detail
@{
    ViewData["Title"] = "Edit Order Details";
    if (String.Equals(LoginController.account_type, "Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    if (String.Equals(LoginController.account_type, "User"))
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

<form method="post" asp-action="EditDetail">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary-basket" style="padding: 10px">Sửa chi tiết Đơn hàng</h4>
        </div>
        <div class="mb-3">
            <label asp-for="OrderID"></label>
            <input asp-for="OrderID" disabled class="form-control"   />
            <span asp-validation-for="OrderID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductID"></label>
            <input asp-for="ProductID" class="form-control"   />
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control"   />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <a asp-controller="" asp-action="">
            <input type="submit" name="Submit" style="width:150px; padding:10px;" value="Sửa">
        </a>
        <button asp-controller="Order" asp-action="Index" style="width:150px; padding:10px;">
            Quay lại
        </button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"   />
    }
}